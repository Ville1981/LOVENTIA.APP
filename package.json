{
  "name": "loventia-app",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon index.js",
    "start": "node index.js",

    "lint": "eslint . --ext .js,.jsx",
    "test": "jest --runInBand --detectOpenHandles --forceExit --coverage",
    "coverage": "jest --coverage",

    "test:auth": "NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit --coverage server/tests/auth.test.js",
    "test:auth-flow": "node server/tests/manual/authFlow.test.js",

    "auth:smoke": "node scripts/authSmokeTest.js",

    "build:client": "npm --prefix ../client run build",
    "postinstall": "npm run build:client && rm -rf ./client-dist && cp -r ../client/dist ./client-dist",
    "release": "standard-version",
    "seed:test-user": "node server/scripts/seedTestUser.js",

    
    "db:inspect": "mongosh \"$MONGO_URI\" --eval \"db.getName(); db.getCollectionNames(); db.users.countDocuments();\"",
    "db:list-users": "mongosh \"$MONGO_URI\" --eval \"db.users.find({}, {email:1, username:1}).limit(5).toArray()\"",
    "db:migrate-usernames": "mongosh \"$MONGO_URI\" --eval \"db.users.updateMany({ $or: [ { username: { $exists: false } }, { username: '' } ] }, [ { $set: { username: { $cond: [ { $gt: [ { $type: '$username' }, 'missing' ] }, '$username', { $let: { vars: { base: { $arrayElemAt: [ { $split: ['$email', '@'] }, 0 ] } }, in: { $substrCP: ['$$base', 0, 30] } } } ] } } } ])\""
   
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@paypal/checkout-server-sdk": "^x.x.x",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^7.2.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^6.13.8",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.5",
    "sharp": "^0.34.2",
    "socket.io": "^4.5.0",
    "sqlstring": "^2.3.3",
    "stripe": "^8.0.0",
    "swagger-ui-express": "^4.6.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "axios": "^1.11.0",
    "axios-cookiejar-support": "^6.0.4",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.5.0",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.1",
    "eslint": "^8.0.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^29.7.0",
    "node-fetch": "^2.7.0",
    "nodemon": "^2.0.7",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.4",
    "tough-cookie": "^5.1.2"
  }
}
