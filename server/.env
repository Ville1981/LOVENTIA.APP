# --- REPLACE START: environment configuration ---

###############################################
# MongoDB (local development)
###############################################
MONGO_URI=mongodb://127.0.0.1:27017/loventia

###############################################
# MongoDB (Docker Compose)
###############################################
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=changeme
MONGO_DB_NAME=loventia
MONGO_PORT=27017

###############################################
# App runtime
###############################################
NODE_ENV=development
PORT=5000
APP_NAME=Loventia

# API base URL (keep /api suffix if routes use it)
BASE_URL=http://localhost:5000/api

###############################################
# CORS / Frontend
###############################################
CLIENT_URL=http://localhost:5174

###############################################
# JWT authentication
###############################################
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
TOKEN_ISSUER=loventia-api
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d
BCRYPT_SALT_ROUNDS=10

###############################################
# Password reset tokens
###############################################
RESET_TOKEN_TTL_MIN=30

###############################################
# Stripe (test keys)
###############################################
STRIPE_SECRET_KEY=sk_test_yourkey
STRIPE_WEBHOOK_SECRET=whsec_yoursecret
STRIPE_PREMIUM_PRICE_ID=price_yourid

###############################################
# PayPal (sandbox keys)
###############################################
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret
PAYPAL_PREMIUM_PRICE=12.00
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

###############################################
# SMTP (Gmail or other provider)
# For Gmail use an App Password (2FA required).
###############################################
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=youraccount@gmail.com
SMTP_PASS=your-app-password-here
MAIL_FROM_NAME=LoventiaApp
MAIL_FROM_EMAIL=youraccount@gmail.com

###############################################
# Test user (optional)
###############################################
TEST_EMAIL=tester+auth@loventia.local
TEST_PASSWORD=VeryStrong!123

# --- REPLACE END ---







