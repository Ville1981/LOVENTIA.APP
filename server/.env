# --- REPLACE START: environment configuration ---

# MongoDB (force IPv4 loopback)
MONGO_URI=mongodb://127.0.0.1:27017/LoventiaApp

# App environment
NODE_ENV=development
PORT=5000

# JWT secrets
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here

# Stripe payment settings
STRIPE_SECRET_KEY=sk_test_…
STRIPE_WEBHOOK_SECRET=whsec_…
STRIPE_PREMIUM_PRICE_ID=price_…

# PayPal payment settings
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret
PAYPAL_PREMIUM_PRICE=12.00
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# SMTP for local dev (e.g. MailDev)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
MAIL_FROM_NAME=LoventiaApp

# Front-end URL for CORS & redirects
CLIENT_URL=http://localhost:5174

