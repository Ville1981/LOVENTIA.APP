# File: client/.env.local

VITE_BACKEND_URL=http://localhost:5000
VITE_CLIENT_URL=http://localhost:5174

# --- REPLACE START: Development API base URL (absolute to avoid URL() errors) ---
# In local dev we make API base absolute so any `new URL(API_BASE_URL)` calls are valid.
# Axios + our config helpers will still work correctly with this.
VITE_API_BASE_URL=http://localhost:5000/api
# --- REPLACE END ---

# Optional: explicit backend origin for building absolute asset URLs (uploads, etc.)
VITE_BACKEND_ORIGIN=http://localhost:5000

# Toggle Mock Service Worker in development
VITE_ENABLE_MSW=false

# Public placeholder image path (served from /public)
VITE_PLACEHOLDER_IMAGE=/placeholder-avatar-male.png
