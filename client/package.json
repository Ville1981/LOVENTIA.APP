{
  "name": "date-app-client",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "react-scripts test --env=jsdom --coverage --coverageThreshold='{ \"global\": { \"branches\": 80, \"functions\": 80, \"lines\": 80, \"statements\": 80 } }'",
    "cy:run": "cypress run",
    "perf:load": "k6 run performance/load.test.js",
    "perf:socket": "artillery run performance/socket-reconnect.test.js -o report.json",
    "scan:zap": "zap.sh -cmd -configfile security/zap-config.json -quickurl http://localhost:3000 -quickout zap-report/zap-report.html",
    "scan:dep": "npm audit --audit-level=moderate && if [ -f gradlew ]; then chmod +x gradlew && ./gradlew dependencyCheckAnalyze; fi",
    "lint": "eslint src --ext .js,.jsx",
    "format": "prettier --write \"src/**/*.{js,jsx,css,html}\""
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "axios": "^1.9.0",
    "date-app": "file:../server",
    "date-fns": "^2.30.0",
    "@tanstack/react-query": "^5.83.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-helmet": "^6.1.0",
    "react-i18next": "^15.6.0",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.1.0",
    "i18next-http-backend": "^3.0.2",
    "react-router-dom": "^6.0.0",
    "socket.io-client": "^4.8.1",
    "slick-carousel": "^1.8.1",
    "react-slick": "^0.30.3",
    "react-hook-form": "^7.59.0",
    "yup": "^1.6.1",
    "leaflet": "^1.9.4",
    "prop-types": "^15.8.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "vite": "^4.5.14",
    "cypress": "^14.5.1",
    "k6": "^0.45.0",
    "artillery": "^2.0.0-27",
    "msw": "^2.10.4",
    "tailwindcss": "^4.1.11",
    "postcss": "^8.5.6",
    "autoprefixer": "^10.4.21",
    "@tailwindcss/postcss": "^4.1.11",
    "eslint": "^8.0.0",
    "prettier": "^2.8.0"
  }
}
