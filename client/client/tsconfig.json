{
  // Tämä tsconfig.json tiedosto määrittää TypeScriptin asetukset projektillesi
  "compilerOptions": {
    // Käännösasetukset
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",

    // CommonJS/ESModule yhteensopivuus
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // JavaScript-tiedostojen tuki
    "allowJs": true,
    "checkJs": false,

    // Tyyppitarkastus
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Lisätyypitykset Vite-ympäristöön (import.meta.env)
    "types": ["vite/client"],

    // Lähdekartat
    "sourceMap": true,

    // Polut ja ulostulo
    // RootDir viittaa client/tsconfig.json sijaintiin: client/src
    "rootDir": "src",
    "outDir": "dist",

    // Mahdollistaa JSON-moduulien tuonnin
    "resolveJsonModule": true

    // Huom: typeRoots on poistettu, jotta Viten client-tyypit löytyvät oletushakupoluista
  },
  // Sisällyttää kaikki client/src alikansion tiedostot (.js/.jsx/.ts/.tsx)
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
